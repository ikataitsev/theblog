<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.rendered_body.html_safe %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<%= render 'comments', locals: { comments: @comments } %>

<%= form_for @new_comment, url: article_comment_path(@article) do |f| %>
  <%= f.text_field :email %>
  <%= f.text_field :text %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
